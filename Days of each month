//Declare amount of days to be shown and the dates as well
const int theDays = 12;
int Days [theDays] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};

//The loop we will be using
for(int i=0; i < theDays; i++)
{
	cout << Month [i] << " has " << Days[i] << " days in the month." << endl;


